{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "unittests",
            "runtimeArgs": [
                "--debug-brk",
                "--no-lazy"
            ],
            "program": "${workspaceRoot}/node_modules/jasmine/bin/jasmine",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}